<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobileAppTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:mobileAppTest"
    xmlns:views="clr-namespace:mobileAppTest.Views"
    Title="mobileAppTest"
    Shell.FlyoutBehavior="Disabled">



    <TabBar>
        <Tab Title="Login">
            <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
        </Tab>
        <Tab Title="Register">
            <ShellContent ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />
        </Tab>
        <Tab Title="ForgotPass">
            <ShellContent ContentTemplate="{DataTemplate views:ForgotPasswordPage}" Route="ForgotPasswordPage" />
        </Tab>
        <Tab Title="Main">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="StartedWorkout">
            <ShellContent ContentTemplate="{DataTemplate views:StartedWorkoutPage}" Route="StartedWorkoutPage" />
        </Tab>
        <Tab Title="ExerciseTapped">
            <ShellContent ContentTemplate="{DataTemplate views:ExerciseTappedPage}" Route="ExerciseTappedPage" />
        </Tab>
        <Tab Title="Finished">
            <ShellContent ContentTemplate="{DataTemplate views:FinishedWorkoutPage}" Route="FinishedWorkoutPage" />
        </Tab>
    </TabBar>


</Shell>
