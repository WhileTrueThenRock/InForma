<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="mobileAppTest.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:viewmodels="clr-namespace:mobileAppTest.ViewModels"
    x:DataType="viewmodels:LoginViewModel"
    NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            TextColor="Green"
            VerticalOptions="Center" />
        <Frame
            Margin="0,50,0,0"
            Padding="0"
            BorderColor="Green"
            CornerRadius="20"
            HorizontalOptions="Center">
            <StackLayout>
                <HorizontalStackLayout>


                    <Image
                        Margin="15,0,0,-10"
                        Aspect="Fill"
                        HeightRequest="25"
                        Source="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-at-256.png"
                        WidthRequest="25" />
                    <Entry
                        Margin="0,0,0,-10"
                        Placeholder="Email"
                        Text="{Binding Email}"
                        WidthRequest="250" />
                </HorizontalStackLayout>
                <BoxView
                    Margin="0,5,0,5"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Color="Green" />
                <HorizontalStackLayout IsVisible="True">
                    <Image
                        Margin="15,0,0,0"
                        Aspect="Fill"
                        HeightRequest="25"
                        Source="https://cdn1.iconfinder.com/data/icons/web-and-user-interface-23/512/141-512.png"
                        WidthRequest="25" />
                    <Entry
                        Margin="0,0,0,-5"
                        IsPassword="True"
                        Placeholder="Contraseña"
                        Text="{Binding Password}"
                        WidthRequest="250" />
                </HorizontalStackLayout>
            </StackLayout>

        </Frame>

        <Label
            Margin="100,15,0,0"
            HorizontalOptions="Center"
            Text="¿Has olvidado tu contraseña?"
            TextColor="Blue">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ForgotTappedCommand}" CommandParameter="MainPage" />
            </Label.GestureRecognizers>
        </Label>

        <Button
            Margin="0,50,0,0"
            Command="{Binding AddEquipmentsToUserCommand}"
            CommandParameter="MainPage"
            Text="LOGIN"
            WidthRequest="250" />
        <HorizontalStackLayout Margin="0,15,0,0">
            <BoxView
                HeightRequest="1"
                WidthRequest="160"
                Color="Black" />

            <Label
                FontSize="Small"
                Text=" O entra con: "
                TextColor="Black"
                VerticalOptions="Center" />

            <BoxView
                HeightRequest="1"
                WidthRequest="200"
                Color="Black" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="0,30,0,0">
            <buttons:SfButton
                x:Name="google"
                Margin="50,0,0,0"
                Background="AliceBlue"
                BackgroundImageSource="googlelogo.png"
                CornerRadius="30"
                HeightRequest="50"
                ImageSource="xlogo.png"
                TextColor="Black"
                WidthRequest="50" />
            <buttons:SfButton
                x:Name="facebook"
                Margin="30,0,0,0"
                Background="AliceBlue"
                BackgroundImageSource="facebooklogo.png"
                CornerRadius="30"
                HeightRequest="50"
                ImageSource="xlogo.png"
                TextColor="Black"
                WidthRequest="50" />
            <buttons:SfButton
                x:Name="sms"
                Margin="30,0,0,0"
                Background="AliceBlue"
                BackgroundImageSource="sms.png"
                CornerRadius="30"
                HeightRequest="50"
                ImageSource="xlogo.png"
                TextColor="Black"
                WidthRequest="50" />
            <buttons:SfButton
                x:Name="twitter"
                Margin="30,0,0,0"
                Background="AliceBlue"
                BackgroundImageSource="xlogo.png"
                CornerRadius="30"
                HeightRequest="50"
                ImageSource="xlogo.png"
                TextColor="Black"
                WidthRequest="50" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="0,25,0,0" HorizontalOptions="Center">
            <Label Text="¿No tienes cuenta?" />
            <Label
                Margin="5,0,0,0"
                Text="Regístrate"
                TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding RegisterTappedCommand}" CommandParameter="MainPage" />
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>